<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id='pricelist_import_form' model='ir.ui.view'>
            <field name="name">pricelist.import.form.inherited</field>
            <field name="model">pricelist.import</field>
            <field name="arch" type="xml">
                <form string='Pricelist Import'>
                    <sheet>
                        
                        <group>
                            <field name='date'/>
                            <field name="import_file"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pricelist_import_trees" model="ir.ui.view">
                <field name="name">pricelist.import.tree</field>
                <field name="model">pricelist.import</field>
                <field name="arch" type="xml">
                    <tree>                   
                        <field name='date'/>
                        <field name="import_file"/>
                        <field name="status" widget="badge"/>
                    </tree>
                </field>
        </record>


        <record id="product_pricelist_view_inherited_import" model="ir.ui.view">
            <field name="name">product.pricelist.form.inherited.import</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='pricelist_config']" position="after">
                    <page name="pricelist_import" string="Pricelist Import">
                        <field name="import_ids">
                            <tree editable="bottom">
                                <field name="date"/>
                                <field name="import_file"/>
                                <button name="import_pricelist" string="Import" type="object" class="oe_highlight" attrs="{'invisible':[('status','=','import')]}"/>
                                <field name="status"/>
                            </tree>
                        </field>
                     </page>
                </xpath>
                <xpath expr="//sheet//group[1]//group[1]//field[@name='company_id']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
            </field>            
        </record>

        
        <record id="action_pricelist_import_int" model="ir.actions.act_window">
                <field name="name">Pricelist Import</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">pricelist.import</field>
                <field name="view_id" ref="pricelist_import_trees"/>
                <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>