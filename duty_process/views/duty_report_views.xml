<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_duty_product_pivot" model="ir.ui.view">
         <field name="name">duty.report.pivot</field>
         <field name="model">duty.report</field>
         <field name="arch" type="xml">
             <pivot string="Duty Analysis" sample="1">
                 <field name="date" interval="month" type="row"/>
                 <field name="total_amt"/>
             </pivot>
         </field>
    </record>

    <record id="view_duty_product_graph" model="ir.ui.view">
         <field name="name">duty.report.graph</field>
         <field name="model">duty.report</field>
         <field name="arch" type="xml">
             <graph string="Duty Analysis" type="line" sample="1">
                 <field name="date" interval="day"/>
             </graph>
         </field>
    </record>

    <record id="duty_report_view_tree" model="ir.ui.view">
        <field name="name">duty.report.view.tree</field>
        <field name="model">duty.report</field>
        <field name="arch" type="xml">
            <tree string="Duty Analysis">
                <field name="date" widget="date"/>
                <field name="duty_id" optional="show"/>
                
            </tree>
        </field>
    </record>

    <record id="view_duty_product_search" model="ir.ui.view">
        <field name="name">duty.report.search</field>
        <field name="model">duty.report</field>
        <field name="arch" type="xml">
            <search string="Duty Analysis">
                <field name="date"/>
                <filter string="Date" name="year" invisible="1" date="date" default_period="this_year"/>
                <separator/>
                <filter name="filter_date" date="date" default_period="this_month"/>
                <filter name="filter_order_date" invisible="1" string="Date: Last 365 Days" domain="[('date', '&gt;=', (datetime.datetime.combine(context_today() + relativedelta(days=-365), datetime.time(0,0,0))).strftime('%Y-%m-%d %H:%M:%S'))]"/>
                <separator/>
               
                <group expand="1" string="Group By">
                    <filter string="Date" name="date" context="{'group_by':'date'}"/>
                    <filter string="Duty #" name="duty_id" context="{'group_by':'duty_id'}"/>
                    <filter string="Import Person" name="import_person" context="{'group_by':'import_person'}"/>
                    <filter string="Site Supervisor" name="supervisor" context="{'group_by':'supervisor'}"/>
                    <filter string="Project" name="project" context="{'group_by':'project'}"/>
                    <filter string="Machine" name="machine" context="{'group_by':'machine'}"/>
                    <filter string="Type" name="type" context="{'group_by':'type'}"/>
                    <filter string="Owner" name="owner" context="{'group_by':'owner'}"/>
                    
                </group>
            </search>
        </field>
    </record>

    <record id="action_order_duty_report" model="ir.actions.act_window">
        <field name="name">Duty Analysis</field>
        <field name="res_model">duty.report</field>
        <field name="view_mode">graph,pivot</field>
        <field name="view_id"></field>  <!-- force empty -->
        <field name="search_view_id" ref="view_duty_product_search"/>
        
        <field name="help">This report performs analysis on your quotations and dutys orders. Analysis check your dutys revenues and sort it by different group criteria (dutysman, partner, product, etc.) Use this report to perform analysis on dutys not having invoiced yet. If you want to analyse your turnover, you should use the Invoice Analysis report in the Accounting application.</field>
    </record>

    <menuitem id="menu_duty_report"
            name="Reporting"
            action="action_order_duty_report"
            parent="menu_duty_configuration"
            sequence="40"/>
    

</odoo>
