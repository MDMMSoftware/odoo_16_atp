<?xml version="1.0" ?>
<odoo>

    <data noupdate="0">

        
        <!-- Group Rule -->

        <record model="ir.module.category" id="module_category_duty">
            <field name="name">Duty Process</field>
        </record>


        <record id="group_duty_process_readonly" model="res.groups">
            <field name="name">Read-only</field>
            <field name="category_id" ref="duty_process.module_category_duty"/>
        </record>

        <record id="group_duty_process_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="duty_process.module_category_duty"/>
            <field name="implied_ids" eval="[(4, ref('duty_process.group_duty_process_readonly'))]"/>
        </record>

        <record id="group_duty_process_approver" model="res.groups">
            <field name="name">Approver</field>
            <field name="implied_ids" eval="[(4, ref('duty_process.group_duty_process_user'))]"/>
            <field name="category_id" ref="duty_process.module_category_duty"/>
        </record>

        <record id="group_duty_process_manager" model="res.groups">
            <field name="name">Adminstrator</field>
            <field name="implied_ids" eval="[(4, ref('duty_process.group_duty_process_approver'))]"/>
            <field name="category_id" ref="duty_process.module_category_duty"/>
        </record>
    </data>
</odoo>