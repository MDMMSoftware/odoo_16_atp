<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_leave_type_form_inherit" model="ir.ui.view">
        <field name="name">hr.leave.type.form.inherit</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="after">
                <div class="oe_title">
                    <h1><field name="burmese_name"/></h1>
                </div>
            </xpath>
            <xpath expr="//field[@name='code']" position="after">
                <field name="is_payroll_related" />
            </xpath>
            <xpath expr="//field[@name='employee_requests']" position="after">
                <field name="allow_allocation_days" attrs="{'invisible': [('requires_allocation','=','no')],'required': [('requires_allocation','=','yes')]}" />
                <field name="configuration_months" attrs="{'invisible': [('requires_allocation','=','no')],'required': [('requires_allocation','=','yes')]}" />
                <field name="warning_over_days" attrs="{'invisible': [('requires_allocation','=','yes')],'required': [('requires_allocation','=','no')]}" />

            </xpath>
        </field>
    </record>
</odoo>

