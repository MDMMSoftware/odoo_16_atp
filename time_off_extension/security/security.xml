<?xml version="1.0" ?>
<odoo>
    <data noupdate="0">
        <record id="group_time_off_employee_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="base.module_category_human_resources_time_off"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('group_time_off_employee_user'))]"/>
        </record>

        <record id="hr_holidays.group_hr_holidays_user" model="res.groups">
            <field name="name">Officer : Manage all requests</field>
            <field name="category_id" ref="base.module_category_human_resources_time_off"/>
            <field name="implied_ids" eval="[(4, ref('hr_holidays.group_hr_holidays_responsible')),(4, ref('group_time_off_employee_user'))]"/>
        </record>

        <record model="ir.rule" id="timeoff_request_department_approver_rule_manager">
            <field name="name">Manage All Request Approvers</field>
            <field name="model_id" ref="time_off_extension.model_hr_leave_prepare"/>
            <field name="domain_force">[('department_id','in',user.hr_department_ids.ids)]</field>
            <field name="groups" eval="[(4,ref('hr_holidays.group_hr_holidays_user')),(4,ref('hr_holidays.group_hr_holidays_manager'))]"/>
        </record>

        <record model="ir.rule" id="timeoff_department_approver_rule_manager">
            <field name="name">Manage All Time Off Approvers</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="domain_force">['|',('department_id','in',user.hr_department_ids.ids),('department_ids','in',user.hr_department_ids.ids)]</field>
            <field name="groups" eval="[(4,ref('hr_holidays.group_hr_holidays_user')),(4,ref('hr_holidays.group_hr_holidays_manager'))]"/>
        </record>
        
        <record model="ir.rule" id="timeoff_report_calender_rule">
            <field name="name">Time Off Report Calender</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave_report_calendar"/>
            <field name="domain_force">[('department_id','in',user.hr_department_ids.ids)]</field>
            <field name="groups" eval="[(4,ref('hr_holidays.group_hr_holidays_user')),(4,ref('hr_holidays.group_hr_holidays_manager'))]"/>
        </record>
        <record model="ir.rule" id="timeoff_report_calender_user_rule">
            <field name="name">Time Off Report Calender User</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave_report_calendar"/>
            <field name="domain_force">[('employee_id','=',user.employee_id.ids)]</field>
            <field name="groups" eval="[(4,ref('time_off_extension.group_time_off_employee_user'))]"/>
        </record>
        <record model="ir.rule" id="timeoff_user_rule_manager">
            <field name="name">Time Off User</field>
            <field name="model_id" ref="time_off_extension.model_hr_leave_prepare" />
            <field name="domain_force">[('create_uid','=',user.id),'|',('employee_company_id','=',False),('employee_company_id','in',company_ids)]</field>
            <field name="groups" eval="[(4,ref('time_off_extension.group_time_off_employee_user'))]" />
        </record>

        <record id="hr_holidays.hr_leave_report_rule_group_holiday_user" model="ir.rule">
            <field name="name">Time Off Summary / Report: All Approver</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave_report"/>
            <field name="domain_force">[]</field>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4, ref('hr_holidays.group_hr_holidays_user'))]"/>
        </record>

        
    <record id="hr_holidays.hr_leave_rule_user_read" model="ir.rule">
        <field name="name">Time Off All Approver read</field>
        <field name="model_id" ref="model_hr_leave"/>
        <field name="domain_force">[]</field>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4, ref('hr_holidays.group_hr_holidays_user'))]"/>
    </record>

    
    <record id="hr_holidays.hr_leave_rule_manager" model="ir.rule">
        <field name="name">Time Off Administrator</field>
        <field name="model_id" ref="model_hr_leave"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('hr_holidays.group_hr_holidays_manager'))]"/>
    </record>

    
    <record id="hr_holidays.hr_leave_allocation_rule_officer_read" model="ir.rule">
        <field name="name">Allocations: see all time off: read all</field>
        <field name="model_id" ref="model_hr_leave_allocation"/>
        <field name="domain_force">[]</field>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4, ref('hr_holidays.group_hr_holidays_user'))]"/>
    </record>

    <record id="hr_holidays.hr_leave_allocation_rule_manager" model="ir.rule">
        <field name="name">Allocations: administrator: no limit</field>
        <field name="model_id" ref="model_hr_leave_allocation"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('hr_holidays.group_hr_holidays_manager'))]"/>
    </record>

    </data>
</odoo>