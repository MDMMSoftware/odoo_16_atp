<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="timeoff_warning_wizard_form" model="ir.ui.view">
            <field name="name">timeoff.warning.wizard.form</field>
            <field name="model">timeoff.warning.wizard</field>
            <field eval="20" name="priority"/>
            <field name="arch" type="xml">
                <form string="Time Off Warning">
                    <div class="alert alert-danger oe_inline">
                        <field name="message" readonly="1" nolabel="1" widget="html"/>
                        <field name="hr_leave_id" invisible="1"/>
                    </div>
                    <footer>
                        <button name="action_approve" string="Confirm" type="object" class="btn-primary"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_timeoff_warning_wizard" model="ir.actions.act_window">
			<field name="name">Time Off Warning</field>
			<field name="res_model">timeoff.warning.wizard</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_mode">form</field>
		</record>
		
    </data>
</odoo>

