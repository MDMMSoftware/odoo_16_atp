<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_company_form_inherit_short_code" model="ir.ui.view">
            <field name="name">res.company.form.inherit.code</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='logo']" position="before">
                    <div name="button_box" class="oe_button_box">
                        <button 
                            name="action_view_sequence_model"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-deviantart">
                            <label for="short_code"  string="Sequences"/>
                            <field name="short_code" invisible="1"/>
                        </button>
                    </div> 
                </xpath>           
                <xpath expr="//field[@name='phone']" position="before">
                    <field name="short_code"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>