<?xml version="1.0" ?>
<odoo>
    <data>
        <!-- Deleting Unncessary record rules  -->
        <delete model="ir.rule" id="sale.sale_order_line_comp_rule"/>
        <delete model="ir.rule" id="sale.sale_order_see_all"/>
        <delete model="ir.rule" id="sale.sale_order_personal_rule"/>
        <delete model="ir.rule" id="sale.sale_order_comp_rule"/>
        <delete model="ir.rule" id="sale.account_invoice_rule_see_personal"/>
        <delete model="ir.rule" id="sale.account_invoice_rule_see_all"/>

        <record id="group_sale_readonly" model="res.groups">
            <field name="name">Read-only</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">the user will have readonly access to sales.</field>            
        </record>   

        <record id="sales_team.group_sale_salesman" model="res.groups">
            <field name="name">User: Own Documents Only</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')),(4, ref('group_sale_readonly'))]"/>
            <field name="comment">the user will have access to his own data in the sales application.</field>
        </record>             

    </data>
</odoo>