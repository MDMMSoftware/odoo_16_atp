<?xml version="1.0" encoding="utf-8"?>
<odoo>



    <record id="action_report_saleorder_tanz" model="ir.actions.report">
        <field name="name">Quotation (Tanz)</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sales_extension.report_saleorder_tanz</field>
        <field name="report_file">sales_extension.report_saleorder_tanz</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>

    <record id="action_report_saleorder_atp" model="ir.actions.report">
        <field name="name">Quotation (ATP)</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sales_extension.report_quo_saleorder_atp</field>
        <field name="report_file">sales_extension.report_quo_saleorder_atp</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>

    <record id="action_report_invoice_tanz" model="ir.actions.report">
        <field name="name">Invoice (Tanz)</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sales_extension.report_invoice_tanz</field>
        <field name="report_file">sales_extension.report_invoice_tanz</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice')),
 (4, ref('account.group_account_readonly'))]"/>

    </record>

</odoo>