<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="report_quo_saleorder_atp_document">
    <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
    <style>
            .custom-font{
                font-family: 'Roboto', sans-serif;
            }
    </style>
    <div class="float-parent-element custom-font" style="width: 50%;">
                    <div class="float-child-element" style="float: left;width: 40%; ">
                        <div class="red" style="background-color: white;margin-left: 0;height: 80px;width:300px">
                            <h3 style="margin-top: 10px">Customer</h3>
                            <p style="font-size: 13px;font-weight: bold"><span t-field="doc.partner_id"/></p>
                            <p style="font-size: 12px;margin-top:-15px;"><span t-field="doc.partner_id.street"/></p>
                        </div>
                    </div>
                    <div class="float-child-element" style="float: left;width: 60%; ">
                        <div class="yellow" style="background-color: white;margin-left: 80%;height: 80px;width:250px;">
                            <h3 style="margin-top: 10px;margin-bottom:20px;">
                                <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                    <span t-if="doc.state not in ['draft','sent']">Order # </span>
                                    <span t-if="doc.state in ['draft','sent']">Quotation # </span>
                                </t>
                                <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                    <span>Pro-Forma Invoice # </span>
                                </t>
                                <span t-field="doc.name"/>
                            </h3>
                            <div t-if="doc.date_order and doc.state not in ['draft','sent']" style="margin-top: -15px;font-size:13px;">
                                <strong>Order Date : <span class="m-0" t-field="doc.date_order"/></strong>
                            </div>
                            <div t-if="doc.date_order and doc.state in ['draft','sent']" style="margin-top: -15px;font-size:13px;">
                                <strong>Quotation Date : <span class="m-0" t-field="doc.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></strong>
                            </div>
                            <div t-if="doc.user_id.name" style="font-size:13px;">
                                <strong> Salesperson : <span class="m-0" t-field="doc.user_id"/></strong>
                            </div>
                            <div style="font-size:13px;">
                                <strong> Sales Types : <span t-field="doc.term_type"/></strong>
                            </div>
                        </div>
                    </div>
                    <div class="hider"/>
                    </div>
    

        <div class="page">
        
                        
        
        <t t-set="display_discount_amt" t-value="any(l.discount_amt for l in doc._get_order_lines_to_report())"/>
        <div class="quotation-table-container">
          
       
        <table class="quotation-table-class">
            <thead>
                <tr class="colored_td" align="center">
                    <th>NO</th>
                    <th style="width: 20%;">Code</th>
                    <th>DESCRIPTION</th>
                    <th>QTY</th>
                    <th>UoM</th>
                    <th>PRICES</th>
                    <th name="th_discount" t-if="display_discount_amt" class="text-center" style="width: 10%;">
                        <span>DISCOUNT</span>
                    </th>
                    <th>TOTAL PRICES</th>
                </tr>
            </thead>
            <tbody>
                <t t-set="lines_to_report" t-value="doc._get_order_lines_to_report()"/>
                <t t-set="counter" t-value="0"/>
                <t t-set="current_subtotal" t-value="0"/>
                <t t-foreach="lines_to_report" t-as="line">
                    <t t-if="line.display_type in ('line_section','line_note')">
                        <tr>
                            <td/>
                            <td colspan="4"><span/><t t-esc="line.name"/></td>
                        </tr>
                    </t>
                    <t t-else="">

                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>

                        <t t-set="counter" t-value="counter + 1"/>
                        <tr>
                            <td><span><t t-esc="counter"/></span></td>
                            <td style="width: 20%;"><span><t t-esc="line.product_template_id.product_code"/></span></td>
                            <td><span><t t-esc="line.name"/></span><span t-raw="line._get_sale_description_report()"/></td>
                            <td><span class="text-end"><t t-esc="line.product_uom_qty"/></span></td>
                            <td><span class="text-end"><t t-esc="line.product_uom.name"/></span></td>
                            <td><span class="text-end"><t t-esc="'{0:,.2f}'.format(int(line.price_unit))"/></span></td>
                            <t t-if="line.discount_amt">
                              <td>
                              
                                <t t-if="line.discount_amt &gt; 0">
                                  <span class="text-end"><t t-esc="line.discount_amt"/></span>
                                </t>
                                
                              </td>
                            </t>
                              <td>
                                <t t-if="line.discount_amt &gt; 0">
                                  <span class="text-end"><t t-esc="'{0:,.2f}'.format(int(line.price_subtotal) - int(line.discount_amt))"/></span>
                                </t>
                                <t t-if="line.discount_amt == 0">
                                    <span class="text-end"><t t-esc="'{0:,.2f}'.format(int(line.price_subtotal))"/></span>
                                </t>
                              </td>
                            
                            
                        </tr>
                    </t>
                </t>
                <tr>
                    <t t-if="display_discount_amt">
                      <td class="blank_cell"/>
                    </t>
                    <td class="blank_cell"/>
                    <td class="blank_cell"/>
                    <td class="blank_cell"/>
                    <td class="blank_cell"/>
                    <td colspan="2">Sub Total</td>
                    <td><span class="text-end"><t t-esc="'{0:,.2f}'.format(int(current_subtotal))"/></span></td>
                </tr>
                
                <t t-if="doc.discount_amt &gt; 0">
                    <tr>
                        <t t-if="display_discount_amt">
                          <td class="blank_cell"/>
                        </t>
                        <td class="blank_cell"/>
                        <td class="blank_cell"/>
                        <td class="blank_cell"/>
                        <td class="blank_cell"/> 
                        <td colspan="2">Discount</td>
                        <td><span class="text-end"><t t-esc="'{0:,.2f}'.format(int(doc.discount_amt))"/></span></td>
                    </tr>                         
                </t>
                <t t-if="doc.amount_tax &gt; 0">
                    <tr>
                        <t t-if="display_discount_amt">
                          <td class="blank_cell"/>
                        </t>
                        <td class="blank_cell"/>
                        <td class="blank_cell"/>
                        <td class="blank_cell"/>
                        <td class="blank_cell"/>
                        <td colspan="2">Tax</td>
                        <td><span class="text-end"><t t-esc="'{0:,.2f}'.format(int(doc.amount_tax))"/></span></td>
                    </tr>                         
                </t>
                <tr class="colored_td">
                    <t t-if="display_discount_amt">
                      <td class="blank_cell"/>
                    </t>
                    <td class="blank_cell"/>
                    <td class="blank_cell"/>
                    <td class="blank_cell"/>
                    <td class="blank_cell"/>
                    <td colspan="2">Total</td>
                    <td><span class="text-end"><t t-class="text-end" t-esc="'{0:,.2f}'.format(int(doc.amount_total))"/></span></td>
                    
                </tr>
            </tbody>
        </table>
         </div>
        <!-- footer -->



        <!--- CSS  to the html -->
        <style>
        <!--  .custom-font{-->
        <!--    font-family: 'Roboto', sans-serif;-->
        <!--}-->
                .quotation-table-container {
            width: 100%;
            
        }
        
        .quotation-table-class {
        margin-top:10px;
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            text-align: left;
            font-family: 'Roboto', sans-serif;
        }
        
        .quotation-table-class th, .quotation-table-class td {
            padding: 9px 9px;
            border: 1px solid black;
        }

        .quotation-table-class th {
            background-color : beige;
        }


        .text-end{
            float: right;
        }
        .blank_cell{
            border:0px !important;
        }

        .quotation_footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            <!--color: white;-->
            text-align: center;
        }

            .hider{
            width:100%;
            height:120px;
            backgroud-color:white;

            }

            .flexible-column {
                overflow:hidden;
                text-overflow:ellipsis;
                width : 100px;
            }

        </style>
        
    </div>

</template>


<template id="report_quo_saleorder_atp">
    <t t-call="web.html_container">
        <t t-set="doc_length" t-value="len(docs)"/>
        <t t-set="counter" t-value="0"/>

        <t t-foreach="docs" t-as="doc">
            <t t-set="counter" t-value="counter + 1"/>

                <div class="header" style="margin-bottom:400px;">
                  <div>
                      <div class="logo">
                          <img t-att-src="image_data_uri(doc.company_id.company_logo)" alt="MMM Logo" style="width: 90px;height: 90px;"/>
                      </div>
                      <div style="margin-left: 70px;margin-top: -100px">
                          <h2 style="margin-top: 10px;margin-left: 27px;margin-bottom:1px">MUDON MAUNG MAUNG</h2>
                          <h5 style="margin-bottom: 1px;margin-left: 27px;">Auto Parts Sale Center</h5>
                          <h6 style="margin-left: 27px;"><span t-field="doc.branch_id"/></h6>
                      </div>
                  </div>
                  <div>
                      <div style="width: 650px;height: 8px;background-color: #000066;margin-top: 18px;margin-bottom:20px;"/>
                      <div style="margin-top: -51px; margin-left: 630px; font-family: 'Arial Rounded MT Bold', 'Helvetica Rounded', Arial, sans-serif; font-size: 20px; font-style: italic; font-variant: small-caps; font-weight: 700; line-height: 41px;">
                          <h1 style="margin-left: 30px;">Quotation</h1>
                      </div>
                  </div>

              </div>
            
            <t t-call="sales_extension.report_quo_saleorder_atp_document" t-lang="doc.partner_id.lang"/>
            
            <t t-if="counter != doc_length">
                <div class="page-break" style="page-break-after: always"/>
            </t>


            <div class="footer">
                <div class="float-parent-element" style="width: 50%; ">
                    <div class="float-child-element" style="float: left;width: 50%; ">
                        <div style="width:200px;border-top: 2px solid black;margin: 10px;margin-left: 70px;">
                        <div style="height:15px"/>
                        <strong style="padding-left:20px;">Authorized Signature</strong>
                        </div>
                    </div>
                    <div class="float-child-element" style="float: left;width: 50%;">
                        <div style="width:200px;border-top: 2px solid black;margin: 10px;margin-left: 200px;">
                        <div style="height:15px"/>
                        <strong style="padding-left:53px;">Received by</strong>
                        </div>
                    </div>
                </div>
                <p style="margin-left: 90%;font: weight 53px;margin-top:20px;padding-top:80px;">Page <span class="page"/>   of <span class="topage"/> </p> 
            </div>
        </t>
    </t>


</template>

</odoo>
