<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_sale_detail_report_wizard" model="ir.ui.view">
            <field name="name">sale.detail.report.wizrd</field>
            <field name="model">detail.report.wizard</field> 
            <field name="inherit_id" ref="reporting_module.form_view_detail_report_wizard"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='department_id']" position="after">
                    <field name="invoice_user_id"  invisible="context.get('report_type') == 'purchase'" string="Sales Person"  options="{'no_create':True,'no_create_edit': True,'no_open': True}"/>
                    <field name="team_id" invisible="context.get('report_type') == 'purchase'" options="{'no_create_edit':True, 'no_create':True}"/>
                </xpath>
                <xpath expr="//button[@class='btn-default']" position="before">
                    <button string="Go To Report" invisible="context.get('report_type') == 'purchase'" context="{'filename':'mmm_sale_detail_report'}" name="print_report"  type="object" class="btn-info"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="before">
                    <field name="partner_id" domain="[]" invisible="context.get('report_type') == 'purchase'" string="Customer" options="{'no_create':True,'no_create_edit': True,'no_open': True}"/>
                </xpath>                
            </field>
        </record>

        <record id="action_view_sale_detail_report_wizard" model="ir.actions.act_window">
            <field name="name">Domain Filter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">detail.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="reporting_module.form_view_detail_report_wizard" />
            <field name="context">{'report_type':'sale'}</field>
            <field name="target">new</field>
        </record>

        <!-- Inherit the menu reporting and remove action -->
        <menuitem id="sale.menu_sale_report"
            name="Reporting"
            groups="sales_team.group_sale_salesman"
            parent="sale.sale_menu_root"
            sequence="40"/>
            
        <!-- Create new menuitem and add action of default reporting -->
        <menuitem id="menu_sale_analysis_report" groups="sales_team.group_sale_salesman" name="Sales Analysis" parent="sale.menu_sale_report" action="sale.action_order_report_all" sequence="3" />

        <menuitem id="menu_sale_detail_report_wizard" groups="sales_team.group_sale_salesman" name="Sales Details Report" parent="sale.menu_sale_report" action="action_view_sale_detail_report_wizard" sequence="12" />
    </data>
</odoo>