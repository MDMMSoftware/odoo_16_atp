<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_tax_form_inherited_sales">
            <field name="name">account.tax.form.inherited.sales</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form" />
            <field name="arch" type="xml">  
                <xpath expr="//form//sheet//notebook//page[@name='definition']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//form//sheet//notebook//page[@name='advanced_options']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>   
                <xpath expr="//form//sheet//field[@name='active']" position="before">
                    <field name="product_template_id" required="1"/>
                </xpath>     
                <xpath expr="//form//sheet//field[@name='amount_type']" position="replace">
                    <field name="amount_type" readonly="1" force_save="1"/>
                </xpath>                                          
            </field>
        </record>

        <record id="view_sale_order_form_inherit_tax" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.tax</field>
            <field name="model">sale.order</field> 
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//sheet//notebook//page[@name='order_lines']//field[@name='order_line']//tree//field[@name='tax_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>                                       
                <xpath expr="//form//sheet//notebook//page[@name='order_lines']//field[@name='note']" position="before">
                    <div class="o_row o_td_label">
                        <label for="tax_id" string="Taxes"/>
                    </div>                            
                    <div class="o_row">
                        <field name="tax_id" options="{'no_create': True, 'no_edit_create': True}" context="{'search_view_ref': 'account.account_tax_view_search'}" attrs="{'readonly': [('state','!=','draft')]}" domain="[('type_tax_use','=','sale'), ('company_id','=',company_id)]"/>
                        <button name="action_compute_tax" type="object" string="Compute Tax" help="Recompute all taxes" class="btn-link mb-1 px-0" icon="fa-refresh" confirm="This can affect the total amount of the sales order!!" attrs="{'invisible': [('state','!=','draft')]}"/>                              
                    </div>   
                </xpath>
            </field>
        </record>        

    </data>
</odoo>