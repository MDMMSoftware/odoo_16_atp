<?xml version="1.0" encoding="utf-8"?>
<odoo> 

    <menuitem id="mrp.menu_mrp_root"
        name="Manufacturing"
        groups="mrp.group_mrp_user,mrp.group_mrp_manager"
        web_icon="mrp_extension,static/description/icon.png"
        sequence="145"/>

    <record id="mrp_production_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_requisitions" class="oe_stat_button" icon="fa-book"  type="object" string="Requisitions"/>      
                <button name="action_open_moves" class="oe_stat_button" icon="fa-bars"  type="object" string="Journal Entry"/>                                                
                         
            </xpath>               
            <xpath expr="//label[@for='product_qty']" position="before">
                <field name="request_location" options="{'no_quick_create': true, 'no_create_edit':true}" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>       
                <field name="request_journal" options="{'no_quick_create': true, 'no_create_edit':true}" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>            
     
            </xpath>  
            <xpath expr="//page[@name='components']" position="after">
                <page string="Other Costs" name="labor">
                    <field name="labor_line"
                        attrs="{'readonly': ['|', ('state', '=', 'cancel'), ('state', '=', 'done')]}">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="desc"/>                            
                            <field name="account_id" required="1"/>
                            <field name="qty"/>
                            <field name="price"/>
                            <field name="total"/>
                            <field name="remark"/>
                        </tree>
                    </field>
                </page>           
            </xpath>       
        </field>
    </record>

    <!-- Requisition -->
    <record id="requisition_form_view_inherit_mrp" model="ir.ui.view">
        <field name="name">requisition.form.inherit.mrp</field>
        <field name="model">requisition</field> 
        <field name="inherit_id" ref="requisition.requisition_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//field[@name='company_id']" position="after">
				<field name="production_id" invisible="1"/>
            </xpath>
            <xpath expr="//sheet//field[@name='order_date']" position="replace">
                <field name="order_date" attrs="{'readonly':['|',('state','not in',['draft','confirm','check']),('production_id','!=',False)]}"/>
            </xpath>
            <xpath expr="//sheet//field[@name='required_date']" position="replace">
                <field name="required_date" attrs="{'readonly':['|',('state','not in',['draft','confirm','check']),('production_id','!=',False)]}"/>
            </xpath>            
            <xpath expr="//sheet//field[@name='src_location_id']" position="replace">
                <field name="src_location_id" attrs="{'readonly':['|',('state','not in',['draft','confirm','check']),('production_id','!=',False)],'required':['|','&amp;',('state','not in',['draft','confirm']),('requisition_type','=','issue'),('requisition_type','=','transfer')]}" options="{'no_create':True,'no_create_edit': True}"/>		
            </xpath>                  
            <xpath expr="//sheet//field[@name='location_id']" position="replace">
                <field name="location_id" attrs="{'readonly':['|',('state','not in',['draft','confirm','check']),('production_id','!=',False)],'required':[('requisition_type','=','transfer')],'invisible':[('requisition_type','=','issue')]}" options="{'no_create':True,'no_create_edit': True}"/>  
            </xpath>             					
                      
        </field>
    </record>   

</odoo>