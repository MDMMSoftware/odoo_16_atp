<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_res_department_tree" model="ir.ui.view">
        <field name="name">res.department.tree</field>
        <field name="model">res.department</field>
        <field name="arch" type="xml">
            <tree string="Department">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_res_department_form" model="ir.ui.view">
        <field name="name">res.department.form</field>
        <field name="model">res.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <h2>
                        <div class="oe_title">
                        	<label for="name" string="Department Name"/><br/>
						    <field name="name" required="1" placeholder="Application Development"/><br/>
                        </div>
                    </h2>
                    <group>
                        <field name="company_id"/>
                        <field name="approve_user_id" required="1" string="Approve Users" widget="many2many_tags"/>
                    </group>
                    
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>    

    <record id="action_res_department" model="ir.actions.act_window">
        <field name="name">Res Department</field>
        <field name="res_model">res.department</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_res_department_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a department.
            </p><p>
            A department is a distiguisher of report!!
            </p>            
        </field>
    </record>

    <menuitem id="frth_child_res_department_configurations" action="action_res_department" name="Department" parent="base.menu_users"/>

</odoo>   