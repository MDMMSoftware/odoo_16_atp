<?xml version="1.0"?>
<odoo>
	<data>
		


		<record id="view_prepaid_register_advance" model="ir.ui.view">
	        <field name="name">prepaid.register.advance</field>
	        <field name="model">prepaid.register.advance</field>
	        <field name="arch" type="xml">
	            <form string="Registered Advance Prepayments">                
	                <div>
	                    <group>
	                        <group>                            
	                            <field name="date"/>
	                            <field name="amount"/>
	                            <field name="ref"/>
								<field name="job_code_id"/>
                                <field name="company_id" invisible="1"/>
	                            <field name="prepaid_id" invisible="1"/>
			                    <field name="user_id" invisible="1"/>	
	                        </group>
                            <group>
								<field name="is_internal_transfer" invisible="1"/>
								<label for="advance_account_id" string="Advance Account" attrs="{'invisible': [('is_internal_transfer', '=', True)]}"/>
                    			<label for="advance_account_id" string="Transfer Account" attrs="{'invisible': [('is_internal_transfer', '=', False)]}"/>
                                <field name="advance_account_id" nolabel="1"/>
                                <field name="journal_id"/>
                                <field name="payment_method_line_id"/>
								<field name="bill_journal_id" attrs="{'invisible': [('is_internal_transfer', '=', False)],'required': [('is_internal_transfer', '=', True)]}"/>
                                <field name="available_payment_method_line_ids" invisible="1"/>
                            </group>
	                    </group>
	                </div>
	                <footer>
	                    <button string="Register" name="action_register" type="object" class="btn-primary"/>
	                    <button string="Cancel" class="btn-default" special="cancel"/>
	                </footer>
	            </form>
	         </field>
    	</record>
    	<record id="action_prepaid_register_payment" model="ir.actions.act_window">
			<field name="name">Registered Advance Prepayments</field>
			<field name="res_model">prepaid.register.advance</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_mode">form</field>
		</record>
		
		

	
	</data>
</odoo>

      
