<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_reconcile_transfer_wizard_form" model="ir.ui.view">
      <field name="name">account.reconcile.transfer.wizard</field>
      <field name="model">account.reconcile.transfer</field>
      <field name="arch" type="xml">
          <form>                
              <div>
                  <group>
                      <group>      
                          <field name="date"/> 
                          <field name="account_id"/>
                          <field name="contra_account_id"/>
                          <field name="amount"/>
                          <field name="payment_id" invisible="1" />
                      </group>
                      
                  </group>
                  <div class="alert alert-info" role="alert">
                      <p style="text-align:center;"><field name="reconcile_amt" readonly="1" force_save="1"/> already reconciled.</p>
                  </div>
              </div>
              <footer>
                  <button string="Register &amp; Done" name="action_done" type="object" class="btn-primary"/>
                  <button string="Cancel" class="btn-default" special="cancel"/>
              </footer>
          </form>
       </field>
  </record>
</odoo>