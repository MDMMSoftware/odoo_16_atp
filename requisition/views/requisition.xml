<?xml version="1.0"?>
<odoo>
	
	
	<record id="requisition_form_view" model="ir.ui.view">
		<field name="name">requisition.form</field>
		<field name="model">requisition</field>
		<field name="arch" type="xml">
			<form string="Requisition Form">
				<header>
					<button name="action_confirm" type="object" string="Confirm"  states="draft" class= "oe_highlight"/>
					<button name="action_check" type="object" string="HOD Approve" states="confirm" class= "oe_highlight"/>
					<button name="action_all_check" type="object" string="All Check" states="check" class= "oe_highlight"/>
					<button name="%(requisition.act_stock_requisition)d" type="action" string="Prepare" states="all_check" class= "oe_highlight btn-info"/>
                    <button name="action_close" type="object" string="Close" attrs="{'invisible':[('state','in',['draft','close'])]}"  class="oe_highlight btn-danger"/>
					<!-- <button name="action_close" type="object" string="Closed" attrs="{'invisible':[('state','in',['draft','close'])]}" class= "oe_highlight"/>
					<button name="action_reset_to_draft" type="object" string="Reset To Draft" attrs="{'invisible':[('state','in',['draft'])]}" class= "oe_highlight"/>
					<button name="action_register_issue" type="object" string="Prepare Issue" attrs="{'invisible':[('state','not in',['approve'])]}" /> -->
					<field name="state" widget="statusbar" attrs="{'invisible':[('state','=','close')]}" statusbar_visible = "draft,confirm,check,all_check,approve"/>
                    <field name="state" widget="statusbar" attrs="{'invisible':[('state','!=','close')]}" statusbar_visible = "draft,confirm,check,all_check,approve,close"/>
				</header>
				<sheet>
					<div name="button_box" class="oe_button_box">
						<button name="action_open_orders" attrs="{'invisible':['|',('partner_id','=',False),('requisition_type','=','transfer')]}" class="oe_stat_button" icon="fa-book" type="object" string="Sale Orders"/>
						<button name="action_open_adjustments" attrs="{'invisible':['|',('partner_id','!=',False),('requisition_type','=','transfer')]}" class="oe_stat_button" icon="fa-book" type="object" string="Adjustments"/>    
            			<button name="action_open_transfers" attrs="{'invisible':[('requisition_type','=','issue')]}" class="oe_stat_button" icon="fa-book" type="object" string="Transfers">
                            <field string="Transfers" name="transfer_count" widget="statinfo"/>
                        </button>                        
          			</div>
					
					<div class="oe_title">
						<h1>
							<field name="name" readonly="1" force_save="1"/>
						</h1>	
					</div>
					<group>
						<group>
							<field name="internal_ref" attrs="{'readonly':[('state','not in',['draft','confirm'])]}"/>
							<field name="request_person_id" attrs="{'readonly':[('state','not in',['draft','confirm'])]}" options="{'no_create':True,'no_create_edit': True}"/>
							<field name="position_id" readonly="1"/>
							<field name="department_id" attrs="{'readonly':[('state','not in',['draft','confirm'])]}"  domain="[('company_id','=',company_id)]"  required="0" options="{'no_create_edit':True,'no_create':True}" />
                            <field name="from_branch" force_save="1" attrs="{'readonly':[('state','not in',['draft','confirm'])]}"/>
                            <field name="to_branch" force_save="1" attrs="{'readonly':[('state','not in',['draft','confirm'])],'invisible':[('requisition_type','=','issue')]}"/>
							<field name="company_id" invisible="1"/>
						</group>
						<group>
							<field name="requisition_type" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
							<div class="o_row o_td_label">
								<label for="partner_id" string="Customer"  attrs="{'invisible':[('requisition_type','=','transfer')]}"/>
							</div>
							<div class="o_row" >
								<field name="partner_id" attrs="{'readonly':[('state','not in',['draft','confirm'])],'invisible':[('requisition_type','=','transfer')]}"/>
								<label for="journal_id" string="Journal" attrs="{'invisible':[('requisition_type','=','transfer')]}" />
								<field name="journal_id" attrs="{'required':[('requisition_type','=','issue'),('partner_id','=',False),('state','not in',['draft','confirm'])],'readonly':[('state','in',['approve','close'])],'invisible':[('requisition_type','=','transfer')]}"/>
							</div>
							<field name="order_date" attrs="{'readonly':[('state','not in',['draft','confirm','check'])]}"/>
							<field name="required_date" attrs="{'readonly':[('state','not in',['draft','confirm','check'])]}"/>
							<field name="src_location_id" attrs="{'readonly':[('state','not in',['draft','confirm','check'])],'required':['|','&amp;',('state','not in',['draft','confirm']),('requisition_type','=','issue'),('requisition_type','=','transfer')]}" options="{'no_create':True,'no_create_edit': True}"/>							
							<field name="location_id" attrs="{'readonly':[('state','not in',['draft','confirm','check'])],'required':[('requisition_type','=','transfer')],'invisible':[('requisition_type','=','issue')]}" options="{'no_create':True,'no_create_edit': True}"/>
							<field name="transit_location_id" attrs="{'readonly':[('state','not in',['draft','confirm','check'])],'invisible':[('requisition_type','=','issue')]}" options="{'no_create':True,'no_create_edit': True}"/>
							<field name="allow_division_feature" invisible="1"/>
						</group>
					</group>
					<notebook>
						<page name="product_line" string="Product Line">
							<field name="requisition_line" attrs="{'readonly': [('state','not in',['draft','confirm','check'])]}">
								<tree editable="bottom">
									<field name="state" invisible="1"/>
									<field name="product_id" options="{'no_create':True,'no_create_edit': True}" />
									<field name="product_desc" />
									<field name="division_id"  domain="[('company_id','=',parent.company_id)]"   attrs="{'column_invisible':[('parent.allow_division_feature','=',False)], 'required': [('parent.allow_division_feature','=','this_must_be_changed_with_boolean_True')] , 'readonly': [('state','!=','draft')]}"   options="{'no_create':True,'no_create_edit': True}"/>
									<field name="qty" />
									<field name="done_qty" force_save="1"/>
									<field name="product_name"/>
									<field name="part_id" optional="hide"/>
									<field name="product_uom_category_id" invisible="1"/>
									<field name="uom_id" />
									<field name="remaining_from" />
									<field name="remaining_to" />
									<field name="remaining_transit" />
                                    <field name="remaining_qty_compute" invisible="1"/>
									<field name="remark" />
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
				<div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
			</form>
		</field>
	</record>

	<record id="requisition_tree_view" model="ir.ui.view">
		<field name="name">requisition.tree</field>
		<field name="model">requisition</field>
		<field name="arch" type="xml">
			<tree string="Requisition Tree">
				<field name="name" string="No."/>
				<field name="order_date"/>
				<field name="required_date"/>
				<field name="request_person_id"/>
				<field name="from_branch" string="From Branch"/>
				<field name="to_branch" string="To Branch"/>
				<field name="company_id"/>
				<field name="state" widget="status"/>
			</tree>
		</field>
	</record>

	<record id="requisition_search_view" model="ir.ui.view">
		<field name="name">requisition.search</field>
		<field name="model">requisition</field>
		<field name="arch" type="xml">
			<search string="Requisition Search">
				<field name="name" filter_domain="[('name', 'ilike', self)]"/>
				<field name="request_person_id" filter_domain="[('request_person_id', 'ilike', self)]"/>
				<field name="department_id" filter_domain="[('department_id', 'ilike', self)]"/>
				<field name="required_date" filter_domain="[('required_date', 'ilike', self)]"/>
				<group expand="0" string="Group By">
					<filter name="request_person_id" domain="[]" context="{'group_by':'request_person_id'}"/>
					<filter name="department_id" domain="[]" context="{'group_by':'department_id'}"/>
					<filter name="order_date" string="Order Date:" domain="[]" context="{'group_by':'order_date'}"/>
					<filter name="required_date" domain="[]" context="{'group_by':'required_date'}"/>
					<filter name="state" domain="[]" context="{'group_by':'state'}"/>
                </group>
			</search>
		</field>
	</record>

	<record id="action_requisition" model="ir.actions.act_window">
        <field name="name">Requisition</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">requisition</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="requisition_tree_view" />
        <field name="help" type="html">
		    <p class="oe_view_nocontent_create">
		        Click to create Requisition.
		    </p>
    	</field>
    </record>

    <menuitem id="main_requisition_menu" name="Requisition" groups="requisition.group_requisition_readonly" sequence="18" web_icon="requisition,static/description/requisition.png"/>
    <menuitem id="pr_operation_menu" name="Operation" groups="requisition.group_requisition_readonly" parent="main_requisition_menu" sequence="1"/>
    <menuitem action="action_requisition" id="requisition_menu" name="Requisition" parent="pr_operation_menu" sequence="1"/>

    <record id="stock_move_form_inherit_requisition" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.requisition</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//group//field[@name='partner_id']" position="after">
                <field name="requisition_id" invisible="1" readonly="1" force_save="1"/>
            </xpath>
            <xpath expr="//sheet//page[@name='operations']//field[@name='move_ids_without_package']" position="attributes">
                <attribute name="attrs">{'readonly': ['|',('requisition_id','!=',False),'&amp;', ('state', '=', 'done'), ('is_locked', '=', True)]}</attribute>
            </xpath>      
            <xpath expr="//sheet//page[@name='detailed_operations']//field[@name='move_line_ids_without_package']" position="attributes">
                <attribute name="attrs">{'readonly': ['|',('requisition_id','!=',False),'|', '|', ('show_operations', '=', False), ('state', '=', 'cancel'), '&amp;', ('state', '=', 'done'), ('is_locked', '=', True)], 'invisible': [('show_reserved', '=', False)]}</attribute>
            </xpath>                  
        </field>
    </record>       

</odoo>