<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_sale_order_form_inherit_exchange" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.exchange</field>
            <field name="model">sale.order</field> 
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='payment_term_id']" position="after">
					<field name="exchange_rate"  attrs="{'readonly':[('state','not in',['draft','sent'])]}" />				
				</xpath>						
            </field>
        </record>   

        
    </data>
</odoo>