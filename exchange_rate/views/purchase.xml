<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_purchase_exchange_form_inherit" model="ir.ui.view">
        	<field name="name">purchase.exchange.form.inherit</field>
        	<field name="model">purchase.order</field>
        	<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
                
                <xpath expr="//field[@name='currency_id']" position="after">
					<field name="exchange_rate" attrs="{'readonly':[('state','in',['purchase','done','cancel'])]}"/>
				</xpath>
                				
			</field>
        </record>

    
    </data>
</odoo>
