        <record id="view_warehouse_valuation_tree" model="ir.ui.view">
            <field name="name">warehouse.valuation.tree</field>
            <field name="model">warehouse.valuation</field>
            <field name="mode">primary</field>
            <field name="priority" eval="1000"/>
            <field name="arch" type="xml">
