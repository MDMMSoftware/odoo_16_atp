<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        
        <record id="action_check_diff" model="ir.actions.server">
            <field name="name">Check Diff Amount</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_stock_inventory_adjustment" />
            <field name="binding_model_id" ref="model_stock_inventory_adjustment" />
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">action = model.sudo().action_check_diff()</field>
        </record>

        <record id="tree_view_inv_adjustment" model="ir.ui.view">
            <field name="name">stock.inventory.adjustment.tree</field>
            <field name="model">stock.inventory.adjustment</field>          
            <field name="arch" type="xml">
                <tree>        
                    <field name="name" string="No."/>         
                    <field name='date'/>
                    <field name="journal_id"/>                    
                    <field name="ref"/>
                    <field name="state" string="Status"/>
                </tree>
            </field>
        </record>

    <record id="form_view_inv_adjustment" model="ir.ui.view">
        <field name="name">stock.inventory.adjustment.form</field>
        <field name="model">stock.inventory.adjustment</field>            
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string ="Confirm" type="object" states="draft" class="oe_highlight btn-info"/>
                    <button name="action_validate" string ="Validate" type="object" states="confirm"  class="oe_highlight btn-info"/>
                    <button name="action_reset_to_draft" string ="Reset To Draft" type="object" states="confirm"  class="oe_highlight btn-warning"/>
                    <button name="%(stock_adjustment.act_stock_return_adjust)d" string ="Return" type="action" states="done" groups="stock.group_stock_manager"  class="oe_highlight btn-warning"/>
                    <button name="action_print_adjustment"  context="{'filename':'mmm_adjustment_print_report'}" string ="Print Adjustment" type="object" states="confirm,done" class="oe_highlight"/>                        
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_open_child_returneds" class="oe_stat_button" icon="fa-file-text-o" type="object" string="Returned Adjusts"/>
                        <button name="action_open_valuations" class="oe_stat_button" icon="fa-book"  type="object" string="Valuations"/>  
                        <button name="action_open_valuation_moves" class="oe_stat_button" icon="fa-book"  type="object" string="Journal Entry"/>  
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" force_save="1"/>
                        </h1>   
                    </div>
                    <group>
                        <group>
                            <field name='date' attrs="{'readonly':[('state','!=','draft')]}" />
                            <field name="journal_id" attrs="{'readonly':[('state','!=','draft')]}"/>  
                            <field name="company_id" invisible="1"/>       
                            <field name="allow_division_feature" invisible="1"/>                   
                        </group>
                        <group>
                            <field name="location_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="branch_ids" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <!-- <field name="department_id" attrs="{'readonly':[('state','!=','draft')]}" required="0" options="{'no_create':True,'no_create_edit':True}"  domain="[('company_id','=',company_id)]"  /> -->
                            <field name="ref" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="origin_returned_adjust_id" force_save="1"  attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="has_refund"  attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="partner_id" attrs="{'invisible':[('has_refund','=',False)],'readonly':[('state', '!=', 'draft')],'required':[('has_refund','=',True)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name='adjust_lines' string='Adjustment Line'>
                            <field name="adjustment_line_id" attrs="{'readonly':[('state','!=','draft')]}" nolabel="1" >
                                <tree editable="bottom"  >                                                                      
                                    <field name="product_id" options="{'no_create':True,'no_create_edit': True}"/>
                                    <field name="desc" />
                                    <field name="remaining_qty" />
                                    <field name="auto_compute_cost" invisible="1"/>
                                    <field name="quantity" sum="Sum of Quantity"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field name="uom_id" options="{'no_create':True,'no_create_edit': True}"/>
                                    <field name="unit_cost" attrs="{'readonly':[('auto_compute_cost','=',True)]}" force_save="1"/>
                                    <field name="unit_value" sum="Sum of Value" attrs="{'readonly':[('auto_compute_cost','=',True)]}"/>
                                    <field name="adjust_account_id" options="{'no_create':True,'no_create_edit': True}" attrs="{'required':[('parent.has_refund','=',False)],'column_invisible': [('parent.has_refund', '=', True)]}" />    
                                    <field name="description"  optional="show"/>
                                    <field name="division_id"  domain="[('company_id','=',parent.company_id)]"   attrs="{'column_invisible':[('parent.allow_division_feature','=',False)], 'required': [('parent.allow_division_feature','=','this_must_be_changed_with_boolean_True')]}"  options="{'no_create':True,'no_create_edit': True}"/>
                                    <field name="analytic_distribution" attrs="{'readonly':[('parent.state','!=','draft')]}" widget="analytic_distribution" groups="analytic.group_analytic_accounting"/>
                                    <field name="job_code_id"  optional="show" options="{'no_create':True,'no_create_edit': True}" />    
                                    <field name="employee_id"  optional="show" options="{'no_create':True,'no_create_edit': True}" />  
                                    <field name="move_ids" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        
                        
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

     <record id="action_inv_adjustment" model="ir.actions.act_window">
        <field name="name">Adjustment</field>
        <field name="res_model">stock.inventory.adjustment</field>          
        <field name="view_id" ref="tree_view_inv_adjustment" />  
        <field name="view_mode">tree,form</field>   
    </record>
        
    <!-- Remove Original Inventory Tree View -->
    <delete model="ir.ui.menu" id="stock.menu_action_inventory_tree" />
    <menuitem id="menu_inv_adjustment" name="Inventory Adjustment" parent="stock.menu_stock_warehouse_mgmt" action="action_inv_adjustment" sequence="101" groups="stock.group_stock_user,access_right.group_stock_readonly" />
    <!-- <menuitem id="menu_inv_adjustment" name="Inventory Adjustment" parent="stock.menu_stock_warehouse_mgmt" action="action_inv_adjustment" sequence="101" groups="stock.group_stock_user" /> -->
        

    <!-- Stock Adjustment Report -->
    <record id="view_stock_adjustment_diff_report_form" model="ir.ui.view">
        <field name="name">Stock Adjustment Diff Report</field>
        <field name="model">stock.adjustment.diff.report</field>
        <field name="arch" type="xml">
            <form string="Stock Adjustment Diff Report">
                <group>
                    <field name="start_date" required="1"/>
                    <field name="end_date" required="1"/>
                    <field name="all_product" />
                    <field name="product_ids" widget="many2many_tags" options="{'no_create':True,'no_create_edit': True}" attrs="{'invisible':[('all_product','=',True)]}"/>
                    
                </group>
                <footer>
                    <button string="Generate Diff EXCEL" name="action_submit_excel" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_adjustment_diff_report" model="ir.actions.act_window">
        <field name="name">Stock Adjustment Diff Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.adjustment.diff.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_stock_adjustment_diff_report_form"/>
        <field name="target">new</field>
    </record>

    <record id="inventory_adjustment_search" model="ir.ui.view">
        <field name="name">stock.inventory.adjustment.search</field>
        <field name="model">stock.inventory.adjustment</field>     
        <field name="arch" type="xml">
            <search string="Adjustment">
                <field name="name" string="Name" />
                <field name="product_id" string="Product" />
                <field name="ref" string="Reference" />
                <field name="partner_id" string="Partner" />
            </search>
        </field>
    </record>
    <menuitem id="menu_stock_adjustment_diff_report" name="Stock Adjustment Diff Report" parent="stock.menu_warehouse_report" action="action_stock_adjustment_diff_report"/>
    </data>
</odoo>
