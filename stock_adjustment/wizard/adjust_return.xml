<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="act_stock_return_adjust" model="ir.actions.act_window">
        <field name="name">Reverse Adjustment</field>
        <field name="res_model">stock.return.adjust</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_stock_return_adjust_form" model="ir.ui.view">
        <field name="name">Return lines</field>
        <field name="model">stock.return.adjust</field>
        <field name="arch" type="xml">
            <form>
                <field name="move_dest_exists" invisible="1"/>
                <field name="adjust_id" invisible="1" force_save="1"/>
                <field name="parent_location_id" invisible="1"/>
                <field name="original_location_id" invisible="1"/>
                <field name="company_id" invisible="1"/>
                <div class="oe_grey" attrs="{'invisible': [('move_dest_exists', '=', False)]}">
                    <p>This adjust appears to be chained with another operation. Later, if you receive the goods you are returning now, make sure to <b>reverse</b> the returned adjust in order to avoid logistic rules to be applied again (which would create duplicated operations)</p>
                </div>
                <field name="product_return_moves">
                    <tree editable="top" create="0">
                        <field name="product_id"  options="{'no_create': True, 'no_open': True}" force_save="1"/>
                        <field name="quantity"/>
                        <field name="uom_id" groups="uom.group_uom"/>
                        <field name="adjustment_line_id" invisible="1"/>
                    </tree>
                </field>
                <group>
                    <field name="location_id" options="{'no_create': True, 'no_open': True}" groups="stock.group_stock_multi_locations" required="1"/>
                </group>
                <footer>
                    <button name="create_returns" string="Return" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
