<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
         <record id="view_import_wizard_form" model="ir.ui.view">
            <field name="name">import.wizard.form</field>
            <field name="model">file.import.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Wizard">
                    <group>
                        <field name="file" filename="file_name" />
                        <field name="file_name" invisible="1" class="oe_inline oe_right" />

                    </group>
                    <footer>
                        <button string="Import" type="object" name="import_file" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

		<record id="file_import_wizard" model="ir.actions.act_window">
            <field name="name">Domain Filter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">file.import.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_import_wizard_form" />
            <field name="target">new</field>
        </record>    
            
    </data>
</odoo>

