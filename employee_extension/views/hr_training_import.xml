<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

    	<record id="view_training_import_form" model="ir.ui.view">
            <field name="name">Training Import Form</field>
            <field name="model">data_import.training</field>
            <field name="arch" type="xml">
                <form string="Training Import" version="7.0">
					<header>
						<button name="import_data" string="Import Training Import" type="object"
							class="oe_highlight" />
						<field name="state" widget="statusbar" statusbar_visible="draft,completed,error" />
					</header>
					<sheet>
						<group>
							<group name="group_left" >
								<field name="name" style="width:90%%;"/>
								<field name="import_date" style="width:50%%;" />
								<field name="import_file" filename="import_fname" style="width:90%%;"/>
							</group>
							<group name="group_right" >
								<field name="import_fname" invisible="1" class="oe_inline oe_right" style="width:50%%;" />
								<field name="note" style="width:90%%;"/>
							</group>
						</group>
					</sheet>
				</form>
            </field>
         </record>
       
		<record id="view_hr_training_import_tree" model="ir.ui.view">
			<field name="name">Data Import Training Tree</field>
			<field name="model">data_import.training</field>
			<field name="arch" type="xml">
				<tree string="Data Import Training">
					<field name="import_date" />
					<field name="name" />
					<field name="import_fname" />
					<field name="note" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<!-- Action -->
		<record id="action_hr_training_import" model="ir.actions.act_window">
			<field name="name">Training Import</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">data_import.training</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_hr_training_import_tree" />
		</record>
		

		<!-- First level menu -->
		<menuitem action="action_hr_training_import" id="hr_training_import" parent="hr_training_menu_parent" name="Training Import" sequence="3"/>

    </data>
</odoo>