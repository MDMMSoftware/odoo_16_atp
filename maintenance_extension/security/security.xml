<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="hr.group_hr_user" model="res.groups">
			<field name="implied_ids" eval="[(3, ref('maintenance.group_equipment_manager'))]"/>
		</record>	
		
		<record id="group_maintenance_request_user" model="res.groups">
			<field name="name">Equipment Request User</field>
			<field name="category_id" ref="base.module_category_manufacturing_maintenance"/>
			<field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
		</record>

		<!-- <record id="maintenance.group_equipment_manager" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('maintenance_extension.group_maintenance_request_user'))]"/>
        </record> -->

		<record id="group_maintenance_administrator" model="res.groups">
			<field name="name">Maintenance Administrator</field>
			<field name="category_id" ref="base.module_category_manufacturing_maintenance"/>
			<field name="implied_ids" eval="[(4, ref('maintenance_extension.group_maintenance_request_user')),(4,ref('maintenance.group_equipment_manager'))]"/>
		</record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('maintenance_extension.group_maintenance_request_user'))]"/>
        </record>

		<record id="maintenance.group_equipment_manager" model="res.groups">
			<field name="name">Equipment Manager</field>
			<field name="category_id" ref="base.module_category_manufacturing_maintenance"/>
            <field name="implied_ids" eval="[(4, ref('maintenance_extension.group_maintenance_request_user'))]"/>
			<field name="users" eval="[]"/>
			<!-- <field name="comment">The user will be able to manage equipments.</field> -->
		</record>

		<record id="maintenance_request_user_rule" model="ir.rule">
			<field name="name">Maintenance Request User Rule</field>		
			<field name="model_id" ref="maintenance.model_maintenance_request" />	
			<field name="domain_force">[('owner_user_id','=',user.id),('company_id', 'in', company_ids + [False])]</field>
			<field name="groups" eval="[(4,ref('maintenance_extension.group_maintenance_request_user'))]" />	
		</record>

		<!-- <record id="maintenance_manager_rule" model="ir.rule">
			<field name="name">Maintenance Manager Rule</field>		
			<field name="model_id" ref="maintenance.model_maintenance_request" />	
			<field name="domain_force">[('team_members_ids','in',user.id),('company_id', 'in', company_ids + [False])]</field>
			<field name="groups" eval="[(4,ref('maintenance.group_equipment_manager'))]" />	
		</record> -->

		<record id="maintenance.equipment_request_rule_admin_user" model="ir.rule">
			<field name="name">Administrator of maintenance requests</field>
			<field name="model_id" ref="model_maintenance_request"/>
			<field name="domain_force">[('team_members_ids','in',user.id),('company_id', 'in', company_ids + [False])]</field>
			<field name="groups" eval="[(4, ref('maintenance.group_equipment_manager'))]"/>
		</record>

		<record id="maintenance_amin_rule" model="ir.rule">
			<field name="name">Maintenance Admin Rule</field>		
			<field name="model_id" ref="maintenance.model_maintenance_request" />	
			<field name="domain_force">[]</field>
			<field name="groups" eval="[(4,ref('maintenance_extension.group_maintenance_administrator'))]" />	
		</record>
	</data>
</odoo>
