<!-- <?xml version="1.0" encoding="utf-8"?> -->
<odoo>
	<data>
		<record id="hr_accident_user_rule" model="ir.rule">
            <field name="name">Employee Accident User</field>
            <field ref="hr_employee_accident.model_employee_accident" name="model_id"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

		<record id="hr_accident_admin_rule" model="ir.rule">
            <field name="name">Employee Accident Admin</field>
            <field ref="hr_employee_accident.model_employee_accident" name="model_id"/>
            <field name="domain_force">['|',('department_id','in',user.hr_department_ids.ids),('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
        </record>

