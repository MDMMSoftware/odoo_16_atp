<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="inherit_view_hr_accident_warning" model="ir.ui.view">
			<field name="name">Hr Accident Warning View</field>
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="hr.view_employee_form"/>
			<field name="arch" type="xml">
				<xpath expr="//page[@name='hr_settings']" position="before"> 	
					<page string="Accident History" groups="hr.group_hr_user">
						<field name="accident_responsible_ids"> 
							<tree string="Accident History" readonly="1" domain="[('state','not in',('draft',))]">
								<field name="name"/>
								<field name="accident_date"/>
								<field name="location"/>
								<field name="reason"/>
								<field name="state" widget="badge" decoration-success="state=='done'" decoration-info="state=='draft'"/>
							</tree>	
						</field>	
					</page>
