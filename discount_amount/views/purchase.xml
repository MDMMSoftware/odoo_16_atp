<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_purchase_discount_form_inherit" model="ir.ui.view">
        	<field name="name">purchase.discount.form.inherit</field>
        	<field name="model">purchase.order</field>
        	<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="global_discount"/>
                </xpath>
                <xpath expr="//field[@name='notes']" position="before">
                    <field name="discount_type" attrs="{'invisible': [('global_discount', '=', False)]}"/>
                    <field name="discount" attrs="{'invisible': [('global_discount', '=', False)]}"/>
                    <field name="discount_account_id" attrs="{'invisible': [('global_discount', '=', False)]}"/>
                    <field name="line_discount_account_id"/>
                </xpath>
                <xpath expr="//field[@name='tax_totals']" position="replace">
                    <field name="amount_untaxed"/>
                    <field name="discount_amt"/>
                    <field name="line_discount"/>
                    <field name="order_discount"/>
                    <field name="amount_tax" attrs="{'invisible': [('amount_tax','&lt;=',0.0)]}"/>
                    <field name="amount_total"/>
                </xpath>
                <xpath expr="//page[@name='products']//tree//field[@name='price_unit']" position="before">             
                    <!-- <field name="discount_type" attrs="{'column_invisible': [('parent.global_discount', '=', True)]}"/>
                    <field name="discount" attrs="{'column_invisible': [('parent.global_discount', '=', True)]}"/>
                    <field name="discount_amt" attrs="{'column_invisible': [('parent.global_discount', '=', True)]}"/> -->
                    <field name="discount_type" optional="hide"/>
                    <field name="discount" optional="hide"/>
                    <field name="discount_amt" optional="hide"/>
                </xpath>
                				
			</field>
        </record>

    
    </data>
</odoo>
