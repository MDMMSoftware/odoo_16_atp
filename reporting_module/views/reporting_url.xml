<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="tree_view_reporting_url" model="ir.ui.view">
            <field name="name">reporting.url.tree</field>
            <field name="model">reporting.url</field>
            <field name="arch" type="xml">
                <tree>          
                    <field name="name"/>   
                    <field name="url"/>               
                </tree>
            </field>
        </record>


        <record id="action_reporting_url" model="ir.actions.act_window">
            <field name="name">Reporting URL</field>
            <field name="res_model">reporting.url</field>
            <field name="view_id" ref="tree_view_reporting_url"/>
            <field name="view_mode">tree</field>   
        </record>

        <menuitem id="main_reporting_menu" name="Reporting" sequence="41" web_icon="reporting_module,static/description/report.png"/>
        <menuitem id="reporting_menu"  name="Reporting" parent="main_reporting_menu" sequence="1"/>
        <menuitem action="action_reporting_url" id="action_reporting_url_menu" name="URLs" parent="reporting_menu" sequence="1"/>
        <menuitem id="advanced_reporting_menu" name="Advanced Reports" parent="main_reporting_menu" sequence="2"/>
        <menuitem action="action_director_report" id="director_report_menu" name="Director Report" parent="advanced_reporting_menu" sequence="1"/>        

        <!-- Detail Report Wizard -->

        <record id="form_view_detail_report_wizard" model="ir.ui.view">
            <field name="name">Details Report</field>
            <field name="model">detail.report.wizard</field>
            <field name="arch" type="xml">
                <form create="0" edit="0">
                    <group>
                        <group>
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1" />
                            <field name="company_id" options="{'no_create':True,'no_create_edit': True,'no_open': True}"/>                                
                        </group>
                        <group>
                            <field name="shop_id" options="{'no_create':True,'no_create_edit': True,'no_open': True}"/>
                            <field name="department_id" options="{'no_create':True,'no_create_edit': True,'no_open': True}"/>
                            <!-- <field name="team_id" options="{'no_create':True,'no_create_edit': True,'no_open': True}"/> -->
                        </group>
                    </group>    
                    <footer>
                        <button string="Cancel"  class="btn-default" special="cancel"/>
                    </footer>                  
                </form>
            </field>
        </record>

    </data>
</odoo>