<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="0">

    <record model="ir.module.category" id="module_reporing">
        <field name="name">Reporting</field>
    </record>

    <record id="group_normal_reporting_user" model="res.groups">
        <field name="name">Normal Reporting User</field>
        <field name="category_id" ref="reporting_module.module_reporing"/>
    </record>

    <record id="group_advanced_reporting_user" model="res.groups">
        <field name="name">Advanced Reproting User</field>
        <field name="implied_ids" eval="[(4, ref('reporting_module.group_normal_reporting_user'))]"/>
        <field name="category_id" ref="reporting_module.module_reporing"/>
    </record>  

    <record id="sale_summary_report_company_rule" model="ir.rule">
        <field name="name">Sales Summary Report Multi Company Rule</field>
        <field name="model_id" ref="reporting_module.model_sale_summary_report"/>
        <field name="domain_force">['|',('branch_id','in',user.branch_ids.ids),('branch_id','=',False),'|',('department_id','in',user.department_ids.ids),('department_id','=',False),'|',('company_id','=',False),('company_id','in',company_ids)]</field>
    </record> 

    <record id="purchase_summary_report_company_rule" model="ir.rule">
        <field name="name">Purchase Summary Report Multi Company Rule</field>
        <field name="model_id" ref="reporting_module.model_purchase_summary_report"/>
        <field name="domain_force">['|',('branch_id','in',user.branch_ids.ids),('branch_id','=',False),'|',('department_id','in',user.department_ids.ids),('department_id','=',False),'|',('company_id','=',False),('company_id','in',company_ids)]</field>
    </record>     
    
</data>
</odoo>
